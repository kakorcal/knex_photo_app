extends ./layout

block content
  div(class='row home')
    each user in users
      div(class='medium-3 columns')
        a(href='/users/#{user.id}' class='thumbnail')
          img(src='./assets/#{user.url}' alt="pic" class='pics')
          h4(class='pic-name')= user.photo_name
          hr
          div(class='meta') 
            h6: em By: 
              strong #{user.username}
            h6: em Uploaded At: 
              strong #{user.date}