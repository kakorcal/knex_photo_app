extends ../../layout

block content
  div(class='row page')
    h2 Add New Photo
  form(action='/users/#{user_id}/photos' method='POST')
    div(class='row page text-center')
      div(class='small-2 columns')
        label(for="pic-name" class='text-right middle'): strong Name: 
      div(class='small-9 columns')
        input(type="text" id='pic-name' name='photo[name]')
      div(class='small-2 columns')
        label(for="url" class='text-right middle'): strong Url: 
      div(class='small-9 columns')
        input(type="text" id='url' name='photo[url]')
      div(class='column')
        input(type="submit" class='button large' value='SUBMIT')        